
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom skyblue-bg page-heading" style="color:#33130F;">
    <div class="col-lg-10">
        <h2><b>Venta</b></h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>

            <li class="active breadcrumb-item">
                <strong>M- Ventas</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12 b-r">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Listado de Venta</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12" style="text-align:right">


                            <button type="button" class="btn btn-outline-secondary" data-toggle="modal" id="btnCrear">
                                <span class="fa fa-plus" aria-hidden="true"></span>&nbsp;Nueva Venta
                            </button>

                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table id="TbProd" class="table table table-striped table-bordered table-hover" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Descripción</th>
                                            <th>Cantidad </th>
                                            <th>Precio </th>

                                            <th>Acciones </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Modal/_SmallModal.cshtml")

<script src="~/Scripts/M_Venta/Producto.js"></script>
<script>
    $(document).ready(function () {
        producto.index();
    });
</script>
